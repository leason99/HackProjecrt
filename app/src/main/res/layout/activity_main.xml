<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.leason.hackprojecrt.MainActivity"
    android:background="@color/color6">
    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekbar_distance"
        android:max="100"
        android:progress="50"
        android:indeterminate="false"
        android:layout_below="@+id/text_distance"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距離 :"
        android:id="@+id/text_distance"
        android:textSize="35dp"
        android:paddingTop="70dp"
        android:textColor="@color/color5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大小 :"
        android:id="@+id/textView2"
        android:textSize="35dp"
        android:textColor="@color/color5"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜尋"
        android:id="@+id/btn_search"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="@color/color5" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_size"
        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignRight="@+id/seekbar_distance"
        android:layout_alignEnd="@+id/seekbar_distance"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="讓我們開始尋找置物櫃"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/text_distance"
        android:textColor="@color/color5"
        android:textSize="30sp" />
    android:textSize="50sp"
</RelativeLayout>
